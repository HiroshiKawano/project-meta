body{
	font-family: 'Hiragino Kaku Gothic Pro', 'ヒラギノ角ゴ Pro W3', メイリオ, Meiryo, 'ＭＳ Ｐゴシック', sans-serif;
	text-align: center;
}
h1{
	font-size: 100px;
}
h2{
	font-size: 80px;
	margin-bottom: 0;
}
th{
	font-family: 'Hiragino Kaku Gothic Pro', 'ヒラギノ角ゴ Pro W3', メイリオ, Meiryo, 'ＭＳ Ｐゴシック', sans-serif;
	width: 15%;
	border: #fbfbfb solid 4px;
	cursor:pointer;
	background-color: #272727;
	font-size:24px;
	padding-top:22px;
	padding-bottom:22px;
	-webkit-transition: all 0.3s;
	-moz-transition: all 0.3s;
	transition: all 0.3s;
	margin-top:-4px;
	font-weight:7000;
}
th:hover{
	background-color: rgba(0,0,0,0.2);
	color: #0493bd;
}

table {
	width: 70%;
	margin: 0 auto;
	border: none;
}
#table{
	position: relative;
	z-index: 5;
}
a:link{text-decoration: none;}
a:visited{text-decoration: none;}
a:hover{text-decoration: none;}
a{color:white;}



body, html, #main {
    /* important */
    height: 100%;
}

.cd-fixed-bg {
    min-height: 100%;
    background-size: cover;
    background-attachment: fixed;
    background-repeat: no-repeat;
    background-position: center center;
}

.cd-fixed-bg.cd-bg-1 {
	background-image: url("book_photo3.jpg");
	border: white solid 50px;
}
.cd-fixed-bg.cd-bg-2 {
	background-image: url("book_photo.jpg");
	border: white solid 50px;
}

.cd-scrolling-bg {
    min-height: 100%;
}

#sentence{
	font-family: “STKaiti”, “ヒラギノ明朝 Pro W3”, “Hiragino Mincho Pro”, serif;
	font-size: 70%;
	color: #272727;
	text-shadow: 0px 0px 20px rgba(255,255,255,1);
	width: 57%;
	text-align: justify;
	width: 50%;
	height: 50%;
}
#sentence:first-letter{
	line-height: 0.9em;
	font-size: 2em;
}
#name{
	font-size: 5vmin;
}
#detail{
	font-size: 4vmin;
}


